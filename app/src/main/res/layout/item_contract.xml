<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/contract_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/contract_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/contract_head"
        android:text="test"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/contrect_topmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contract_name"
        android:layout_toRightOf="@id/contract_head"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="testtesttesttesttesttesttesttesttesttesttesttesttesttesttes"
        android:textSize="18sp" />
</RelativeLayout>